# Lark OAuth Configuration
LARK_APP_ID=your_app_id_here
LARK_APP_SECRET=your_app_secret_here

# Session Configuration
SESSION_SECRET=your_session_secret_here_at_least_32_characters_long

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_LARK_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Optional: Lark API Base URL (for Feishu use https://open.feishu.cn)
LARK_API_BASE_URL=https://open.larksuite.com

# Lark Base (Bitable) Configuration
# Required for data persistence features
LARK_BASE_APP_TOKEN=your_bitable_app_token_here
LARK_BASE_MEETINGS_TABLE_ID=your_meetings_table_id_here
LARK_BASE_MINUTES_TABLE_ID=your_minutes_table_id_here
LARK_BASE_ACTION_ITEMS_TABLE_ID=your_action_items_table_id_here

# Webhook Configuration
# Required for webhook signature verification
LARK_WEBHOOK_ENCRYPT_KEY=your_webhook_encrypt_key_here
LARK_WEBHOOK_VERIFICATION_TOKEN=your_webhook_verification_token_here

# App Access Token (for webhook processing)
# In production, implement proper token management with refresh
LARK_APP_ACCESS_TOKEN=your_app_access_token_here

# Claude AI Configuration
# Required for minutes generation
ANTHROPIC_API_KEY=your_anthropic_api_key_here
